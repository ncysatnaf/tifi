{
  "name": "tifi",
  "version": "1.0.0",
  "description": "Boilerplate project for building Isomorphic apps using React and Redux",
  "scripts": {
    "test": "node_modules/.bin/mocha shared/tests/*.spec.js --compilers js:babel-register",
    "test:server": "node_modules/.bin/cross-env NODE_ENV=test PORT=8080 MONGO_URL=mongodb://localhost:27017/mern-test mocha --compilers js:babel-register --recursive server/tests/**/*.spec.js",
    "start": "node_modules/.bin/cross-env NODE_ENV=development node_modules/.bin/nodemon index.js",
    "start:prod": "node_modules/.bin/cross-env NODE_ENV=production node index.js",
    "bs": "npm run clean && npm run build && npm run start:prod",
    "minify": "cleancss -o static/css/app.min.css static/css/app.css",
    "build": "node_modules/.bin/cross-env NODE_ENV=production webpack --config webpack.config.prod.js && npm run minify",
    "clean": "rimraf static/dist",
    "slate": "rimraf node_modules && npm install",
    "lint": "node_modules/.bin/eslint client server shared"
  },
  "pre-commit": [
    "lint",
    "test",
    "test:server"
  ],
  "dependencies": {
    "babel-core": "^6.4.5",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.14.2",
    "cross-env": "^1.0.7",
    "cuid": "^1.3.8",
    "express": "^4.13.4",
    "github-api": "^2.2.0",
    "history": "^2.1.1",
    "isomorphic-fetch": "^2.2.1",
    "jsonwebtoken": "^7.0.0",
    "mongoose": "^4.3.7",
    "passport": "^0.3.2",
    "passport-facebook": "^2.1.1",
    "passport-github": "^1.1.0",
    "passport-local": "^1.0.0",
    "react": "^15.0.1",
    "react-dom": "^15.0.1",
    "react-helmet": "^2.3.1",
    "react-redux": "^4.1.2",
    "react-router": "^2.0.0-rc5",
    "redux": "^3.5.2",
    "redux-logger": "^2.6.1",
    "redux-thunk": "^2.0.1",
    "sanitize-html": "^1.11.3",
    "slug": "^0.9.1",
    "socket.io-client": "^1.4.6",
    "socketio": "^1.0.0"
  },
  "devDependencies": {
    "babel-eslint": "^6.0.4",
    "babel-loader": "^6.2.1",
    "babel-plugin-react-transform": "^2.0.0",
    "babel-plugin-transform-react-constant-elements": "6.8.0",
    "babel-plugin-transform-react-inline-elements": "6.8.0",
    "babel-plugin-transform-react-remove-prop-types": "0.2.6",
    "babel-polyfill": "^6.3.14",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-react-hmre": "^1.1.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.7.2",
    "chai": "^3.5.0",
    "clean-css": "^3.4.9",
    "css-loader": "^0.23.1",
    "css-modules-require-hook": "^4.0.0",
    "deep-freeze": "0.0.1",
    "eslint": "^2.9.0",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-plugin-import": "^1.8.0",
    "eslint-plugin-jsx-a11y": "^1.2.2",
    "eslint-plugin-react": "^5.1.1",
    "expect": "^1.13.4",
    "expect-jsx": "^2.2.2",
    "extract-text-webpack-plugin": "^1.0.1",
    "mocha": "^2.4.5",
    "nodemon": "^1.9.1",
    "pre-commit": "^1.1.2",
    "react-addons-test-utils": "^15.0.1",
    "react-transform-hmr": "^1.0.1",
    "redux-devtools": "^3.1.1",
    "redux-devtools-dock-monitor": "^1.1.0",
    "redux-devtools-log-monitor": "^1.0.4",
    "rimraf": "^2.5.1",
    "style-loader": "^0.13.0",
    "supertest": "^1.1.0",
    "webpack": "^1.12.12",
    "webpack-dev-middleware": "^1.5.1",
    "webpack-hot-middleware": "^2.6.4"
  },
  "engines": {
    "node": ">=4"
  }
}
